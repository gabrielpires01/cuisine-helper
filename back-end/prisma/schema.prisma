generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id        Int        @id @default(autoincrement())
  name String
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  sessions  sessions[]
  recipes recipes[]
}

model sessions {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  createdAt DateTime @default(now())
  users     users    @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model recipes {
  id        Int        @id @default(autoincrement())
  userId Int?
  image String
  name String
  description String
  createdAt DateTime @default(now())
  users     users?   @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  recipesIgredients recipesIgredient[]
}

model ingredients {
  id        Int        @id @default(autoincrement())
  name String @unique
  recipesIgredients recipesIgredient[]
}

model recipesIgredient {
  id        Int        @id @default(autoincrement())
  recipeId Int
  measure String
  ingredientId Int
  ingresdients ingredients @relation(fields: [ingredientId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  recipes recipes @relation(fields: [recipeId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}